<div class="padding-navbar tournament-background">
<div class="container-fluid glass-container">
  <h1 class="sponsor_h1">Sponsing Tournament</h1>
  <div class="row">
    <div class="col-md-offset-4 col-md-4 col-sm-12">
      <h5>Create a new sponsor</h5>
      <button class="btn btn-primary" data-toggle="modal" data-target="#myModalNorm">create</button>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="col-md-offset-4 col-md-4 col-sm-12">
      <%= render "sponsorships/form" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-4 col-md-4 col-sm-12">
       <form>
          <div class="form-group">
          <label for="input_amount">Amount:</label>
          <input type="text" id="input_amount" class="form-control">
        </div>
        <button id='donateButton' class="btn btn-primary">Donate</button>
      </form>
      <p id="error_explanation"></p>

    </div>
  </div>
</div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModalNorm" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close"
                   data-dismiss="modal">
                       <span aria-hidden="true">&times;</span>
                       <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    Create a new sponsor
                </h4>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <%= render "sponsors/form" %>
            </div>
        </div>
    </div>
</div>
</div>

<script src="https://checkout.stripe.com/checkout.js"></script>

<script>
var handler = StripeCheckout.configure({
  key: '<%= Rails.configuration.stripe[:publishable_key] %>',
  email: '<%= @user.email%>',
  locale: 'auto',
  token: function(token) {
    $('#stripe_token').val(token.id);
    $('form.new_sponsorship').submit();
  }
});

$('#donateButton').on('click', function(e) {
  e.preventDefault();
  $('#error_explanation').html('');
  var amount = $('#input_amount').val();
  amount = amount.replace(/\$/g, '').replace(/\,/g, '');
  amount = parseFloat(amount);
  var money = new RegExp('^[+]?([1-9][0-9]*(?:[\.][0-9]*)?|0*\.0*[1-9][0-9]*)(?:[eE][+-][0-9]+)?$');
  if (money.test(amount)) {
      amount = amount * 100; // Needs to be an integer!
      $('#amount').val(Math.round(amount));
      handler.open({
        name: 'Golf',
        description: 'pay',
        currency: 'cad',
        amount: $('#amount').val()
      })
  } else {
    $('#error_explanation').html('<p>Please enter a valid amount in CAD ($).</p>');
  }
});

// Close Checkout on page navigation
$(window).on('popstate', function() {
  handler.close();
});
</script>
