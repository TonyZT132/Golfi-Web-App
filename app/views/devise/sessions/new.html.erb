<div class="new-session">


<script>
$(document).ready(function () {
$("#new_account").validate({
debug: true,
rules: {
"account[email]": {required: true, email: true},
"account[password]": {required: true, minlength: 6}
}
});
});


</script>


    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'login'}) do |f| %>
    <p class="form-title">Log In VJP      !</p>

    <div class="field">
        <%= f.email_field :email, autofocus: true, :placeholder => "Email" %>
    </div>

    <div class="field">
        <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
    </div>

	
    <% if devise_mapping.rememberable? -%>
    <div class="field remember-forgot">
        <%= f.check_box :remember_me%>
        Remember Me
    </div>
    <% end -%>
    <div class="actions">
        <%= f.submit "Sign In", :class=>"btn btn-large btn-primary"%>
    </div>
    <% end %>
</div>
